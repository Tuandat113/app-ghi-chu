<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".DangKiActivity">

    <ScrollView
        android:background="@drawable/nendep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/goccc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/logovi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/anhdaidien"
                    android:paddingBottom="15dp"
                    android:layout_width="200dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="200dp"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="2dp" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:id="@+id/noidung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="260dp"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp"
                        android:text="CẬP NHẬT GHI CHÚ"
                        android:textColor="#FF5722"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtRegUserup"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/background_edttextdo"
                        android:hint="Tiêu Đề"
                        android:padding="14dp"
                        android:textColor="@color/grey_dam"
                        android:textColorHint="@color/grey_dam"
                        android:textSize="17dp" />


                    <TextView
                        android:id="@+id/dangKi_etEmailup"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_edttextdo"
                        android:hint="Ngày"
                        android:inputType="date"
                        android:padding="14dp"
                        android:textColor="@color/grey_dam"
                        android:textColorHint="@color/grey_dam"
                        android:textSize="17dp" />

                    <EditText
                        android:id="@+id/edtRegPasswordup"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_edttextdo"
                        android:hint="Nội Dung"
                        android:padding="14dp"
                        android:textColor="@color/grey_dam"
                        android:textColorHint="@color/grey_dam"
                        android:textSize="17dp"
                        app:passwordToggleEnabled="true" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btnRegup"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"

                            android:background="@drawable/button_bgv"
                            android:text="SỬA"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/btnRelayup"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_uiv"
                            android:text="HỦY"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>